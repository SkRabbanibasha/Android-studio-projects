<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/readname"
        android:text="name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:background="#E31919"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/readroll"
        android:text="rollnum"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_marginTop="5dp"
        android:background="#29A80D"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/readmailid"
        android:text="mailid"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:background="#102485"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/readmobile"
        android:text="mobilenum"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:background="#900B95"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/delete"
        android:contentDescription="Delete"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFEB3B"/>

</LinearLayout>